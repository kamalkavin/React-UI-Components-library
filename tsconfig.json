{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "build/types",
    "emitDeclarationOnly": false,
    "jsx": "react",
    "outDir": "./build",
    "module": "esnext",
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
    ],
    "noFallthroughCasesInSwitch": true
  },
  "exclude": [
    "internals",
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "coverage",
    "src/serviceWorker.js",
    "src/setupProxy.ts",
    "**/*.js",
    "storybook-static",
    "**/build", "**/dist", "**/*.md", "**/rollup.config.js"
  ],
}